<div class="sidebar" role="aside" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <header class="header" role="banner">
        {{! The logo of the blog }}
        {{#if @blog.logo}}<a href="/"><img id="blog" class="logo" src="{{@blog.logo}}"></a>{{/if}}

        {{! The title of the blog }}
        <h1 class="title"><a href="/">{{@blog.title}}</a></h1>

        {{! The description of the blog }}
        <p class="description">{{@blog.description}}</p>

        {{! Small separator between user details and menu }}
        <div class="separator"></div>

        {{! Navigation menu }}
        {{> "nav"}}

        {{! Social links }}
        <div class="social-icons">
            <a href="https://github.com/pmasucci" class="icon icon-github-circled"></a>
            <a href="https://twitter.com/pete_masucci" class="icon icon-twitter"></a>
            <a href="/rss" class="icon icon-rss"></a>
            <a href="mailto:peter.a.masucci@gmail.com" class="icon icon-mail"></a>
        </div>
    </header>

    <footer class="site-footer">
    </footer>
</div>
